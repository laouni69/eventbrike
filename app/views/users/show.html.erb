<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<h1>Evénements créés</h1>

<ul class="events">
  <% @user.events.each do |event| %>
    <h3>
      <%= link_to event.description, event %>
        </h3>
  <% end %>
</ul>